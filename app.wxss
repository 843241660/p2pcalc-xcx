/**app.wxss**/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    font-size: 34rpx;
    color: #2c3e50;
    /*border: 1px solid red;*/
}


/*区块*/

.tabel {
    padding: 5rpx 8rpx;
}

.tabel-title {
    color: #999;
    height: 50rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #d9d9d9;
}


/*共用的一行布局*/

.cell {
    position: relative;
    height: 70rpx;
    line-height: 70rpx;
    padding: 8rpx 30rpx;
    border-bottom: 1rpx solid #d9d9d9;
}

.cell input {
    display: inline-block;
    vertical-align: middle;
    width: 410rpx;
    border-bottom: 1px solid #d9d9d9;
    margin-left: 5rpx;
    margin-right: 5rpx;
}

.cell-lefttext {
    min-width: 210rpx;
    display: inline-block;
}

.cell-lefttext-red {
    color: red;
}

.cell-righttext {
    min-width: 65rpx;
    text-align: center;
    position: absolute;
    top: 8rpx;
    right: 12rpx;
}

.weui-cell__ft {
    padding-right: 26rpx;
    position: relative;
    text-align: right;
    color: #999;
}

.weui-cell__ft::after {
    content: " ";
    display: inline-block;
    height: 12rpx;
    width: 12rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #c8c8cd;
    border-style: solid;
    transform: matrix(.71, .71, -.71, .71, 0, 0);
    position: relative;
    top: -4rpx;
    position: absolute;
    top: 50%;
    margin-top: -8rpx;
    right: 4rpx;
}

.mt30 {
    margin-top: 30rpx;
}


/*底部导航栏*/

.footbar {
    border-top: 1rpx solid #c0bfc4;
    width: 100%;
    position: fixed;
    bottom: 0;
    padding: 10rpx 0;
    background-color: #f7f7fa;
}

.footbar-item {
    width: 50%;
    display: inline-block;
    text-align: center;
    color: #999;
}

.footbar-item.active {
    color: #09bb07;
}

.footbar-item image {
    width: 56rpx;
    height: 56rpx;
    display: block;
    margin: 6rpx auto;
}
